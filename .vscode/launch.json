{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug (ST-Link, Generic)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/${command:makefile.getConfigValue}",
            "device": "STM32F407VG",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "runToEntryPoint": "main",
            "preLaunchTask": "build",
            "openOCDLaunchCommands": [
                "init",
                "reset init"
            ]
        }
    ]
}